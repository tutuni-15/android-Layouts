<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llay"
        android:orientation="vertical"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/timetable"
            android:visibility="invisible">

            >

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table"
                android:gravity="center"
                android:textSize = "20dp"
                android:textStyle="bold">

            </TextView>


            <TableRow android:background="#00BCD4" android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Time"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Subject" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="Teacher" />




            </TableRow>
            <TableRow android:background="#F0F7F7" android:padding="10dp" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="10 to 11"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Java Lab" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Jaydeep Sir" />

            </TableRow>
            <TableRow android:background="#F0F7F7" android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="10 to 12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:text="Java Lab" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Jaydeep Sir" />

            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/btnt"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@+id/llay"
            android:text="Click To View Table"
            >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/btngrid"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@+id/btnt"
            android:text="Long Press to See Images "
            >
        </Button>

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btnt"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:columnCount="2"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:visibility="invisible"
            android:rowCount="4">

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:layout_gravity="left|top"
                android:src="@drawable/scene1" />

            <ImageView
                android:id="@+id/ImageView2"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:layout_gravity="left|top"
                android:src="@drawable/scene2" />

            <ImageView
                android:id="@+id/ImageView3"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:layout_gravity="left|top"
                android:src="@drawable/scene2" />

            <ImageView
                android:id="@+id/ImageView4"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:layout_gravity="left|top"
                android:src="@drawable/scene1" />

        </GridLayout>

    </LinearLayout>




</RelativeLayout>

